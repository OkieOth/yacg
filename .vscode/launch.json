{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "yacg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/yacg.py",
            "args": [
                "--model",
                "resources/models/json/yacg_config_schema.json",
                "resources/models/json/yacg_model_schema.json",
                "--template",
                "plantuml=stdout"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "incrementVersion",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/incrementVersion.py",
            "args": [
                "--model",
                "tests/resources/models/json/examples/simple_allof.json",
                "--version",
                "minor", 
                "--backupExt",
                "tmp",
                "--dirToCheckForRefs",
                "tests/resources/models/json/examples"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "special debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/yacg.py",
            "args": [
                "--config",
                "resources/configurations/java_bean_example.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "yacg Python Attach (Remote Debug localhost:5678)",
            "type": "debugpy",
            "request": "attach",
            "connect": { "host": "127.0.0.1", "port": 5678 },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "~/yacg"
              }
            ],
            "justMyCode": false,
        },
        {
            "name": "all tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": ["-v"]
        },
        {
            "name": "current tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": ["-v","${file}"]
        }

    ]
}
