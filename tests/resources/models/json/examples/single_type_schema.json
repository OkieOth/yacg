{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "single type schema",
    "description": "example schema that contains a top-level type",
    "version": "0.0.1",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "aValue": {
            "type": "number",
            "minimum": 0.5,
            "maximum": 1.4,
            "exclusiveMinimum": -1.5,
            "exclusiveMaximum": -10.4
        },
        "aEnum": {
          "type": "string",
          "enum": ["value1", "value2", "value3"]
        },
        "complexAttrib": {
            "type": "object",
            "properties": {
                "prop1": {
                    "type": "string"
                },
                "prop2": {
                    "type": "integer"
                },
                "prop3": {
                    "$ref": "#/definitions/AnotherType"
                }
            }
        }
    },
    "definitions": {
        "AnotherType": {
            "type": "object",
            "properties": {
                "another1": {
                    "type": "string",
                    "format": "date-time"
                },                
                "another2": {
                    "type": "number"
                }
            }
        }
    }
}